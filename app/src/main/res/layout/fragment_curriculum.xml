<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CurriculumFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/curr_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/banner_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:text="Home >> Curriculum"
        android:textSize="20dp"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/curr_title" />


    <android.support.v7.widget.CardView
            android:id="@+id/curr_view1"
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="40dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/banner_text">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/curr_view1_img"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:src="@drawable/logo_blue" />

                <TextView
                    android:id="@+id/curr_view1_text"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Programme Overview"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/curr__view2"
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/banner_text">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/curr_view2_img"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:src="@drawable/logo_blue" />

                <TextView
                    android:id="@+id/curr_view2_text"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Courses"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/curr_view3"
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/curr_view1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/curr_view3_img"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:src="@drawable/logo_blue" />

                <TextView
                    android:id="@+id/curr_view3_text"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Duration study and class Schedule"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/curr_view4"
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/curr__view2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/curr_view4_img"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:src="@drawable/logo_blue" />

                <TextView
                    android:id="@+id/curr_view4_text"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Regulations and Syllabus"
                    android:textAlignment="center"
                    android:textColor="#FCAD03"
                    android:textSize="18sp" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>